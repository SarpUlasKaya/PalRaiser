            <span asp-validation-for="Project.DislikeCount" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Project.ReportCount"></label>
            </div>
            <div class="col-6">
                <input asp-for="Project.ReportCount" class="form-control" />
            </div>
            <span asp-validation-for="Project.ReportCount" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Project.TestValue"></label>
            </div>
            <div class="col-6">
                <input asp-for="Project.TestValue" class="form-control" />
            </div>
            <span asp-validation-for="Project.TestValue" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3 offset-4">
                <input type="submit" value="Create" class="btn btn-primary form-control" />
            </div>
            <div class="col-3">
                <a asp-page="Index" class="btn btn-success form-control">Back to List</a>
            </div>
        </div>
    </form>
</div>

@section Scripts{ 
    <partial name="_ValidationScriptsPartial" />
}