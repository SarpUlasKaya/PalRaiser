            <div class="col-4">
                <label asp-for="Project.ProjName"></label>
            </div>
            <div class="col-6">
                <input asp-for="Project.ProjName" class="form-control" />
            </div>
            <span asp-validation-for="Project.ProjName" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Project.Summary"></label>
            </div>
            <div class="col-6">
                <input asp-for="Project.Summary" class="form-control" />
            </div>
            <span asp-validation-for="Project.Summary" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Project.DetailedInfo"></label>
            </div>
            <div class="col-6">
                <input asp-for="Project.DetailedInfo" class="form-control" />
            </div>
            <span asp-validation-for="Project.DetailedInfo" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Project.Type"></label>
            </div>
            <div class="col-6">
                <input asp-for="Project.Type" class="form-control" />
            </div>
            <span asp-validation-for="Project.Type" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Project.AmountRaised"></label>
            </div>
            <div class="col-6">
                <input asp-for="Project.AmountRaised" class="form-control" />
            </div>
            <span asp-validation-for="Project.AmountRaised" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Project.LikeCount"></label>
            </div>
            <div class="col-6">
                <input asp-for="Project.LikeCount" class="form-control" />
            </div>
            <span asp-validation-for="Project.LikeCount" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Project.DislikeCount"></label>
            </div>
            <div class="col-6">
                <input asp-for="Project.DislikeCount" class="form-control" />
