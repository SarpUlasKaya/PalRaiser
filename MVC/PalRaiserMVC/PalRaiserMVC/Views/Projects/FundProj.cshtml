<br />
<h2 class="text-info">Fund Project</h2>
<br />

<div class="border container" style="padding:30px;">
    <form method="post" asp-area="" asp-controller="Projects" asp-action="AddFunds">
        @*@if (Model.ProjectId != 0)
        {
            <input type="hidden" asp-for="ProjectId" />
        }
        <div class="text_danger" asp-validation-summary="ModelOnly"></div>*@
        <div class="form-group row">
            <div class="col-3">
                <label>Enter the amount you wish to donate: </label>
            </div>
            <div class="col-6">
                <input type ="number" name="amount" id="amount" class="form-control" />
                @*<span asp-validation-for="About" class="text-danger"></span>*@
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3 offset-3">
                <button type="Submit" onclick="return confirm('Are you sure you want to raise this amount for the project?')" class="btn btn-primary form-control">
                    Confirm Transaction
                </button>
            </div>
            <div class="col-3">
                <a asp-area="" asp-controller="Goals" asp-action="Index" class="btn btn-success form-control">
                    Back To Goals
                </a>
            </div>
        </div>
    </form>
</div>

