@model PalRaiserMVC.Models.Project

<br />
<h2 class="text-info">@(Model.ProjectId!=0 ? "Edit" : "Create") Project</h2>
<br />

<div class="border container" style="padding:30px;">
    <form method="post">
        @if (Model.ProjectId != 0)
        {
            <input type="hidden" asp-for="ProjectId" />
        }
        <div class="text_danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="ProjName">Name of The Project:</label>
            </div>
            <div class="col-6">
                <input asp-for="ProjName" class="form-control" />
                <span asp-validation-for="ProjName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Type">Type of Project: </label>
            </div>
            <div class="col-6">
                <input asp-for="Type" class="form-control" />
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Summary">Project Short Summary: </label>
            </div>
            <div class="col-6">
                <input asp-for="Summary" class="form-control" />
                <span asp-validation-for="Summary" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="About">Detailed Information About The Project: </label>
            </div>
            <div class="col-6">
                <input asp-for="About" class="form-control" />
                <span asp-validation-for="About" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3 offset-3">
                <button type="Submit" class="btn btn-primary form-control">
                    @(Model.ProjectId!=0 ? "Update" : "Create")
                </button>
            </div>
            <div class="col-3">
                @if (Model.ProjectId != 0)
                {
                    <a asp-action="ViewProj" asp-route-id="@(Model.ProjectId)" class="btn btn-success form-control">
                        Back To Project
                    </a>
                }
                else
                {
                    <a asp-action="Index" class="btn btn-success form-control">
                        Back To List
                    </a>
                }
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}